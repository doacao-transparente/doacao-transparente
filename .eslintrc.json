{
  "extends": "standard",
  "rules": {
    "indent": ["error", "tab"],
    "brace-style": [2, "stroustrup", { "allowSingleLine": false }],
    "no-undef": "off",
    "no-tabs": "off",
    "curly": ["error", "all"],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
    }]
  }
}
