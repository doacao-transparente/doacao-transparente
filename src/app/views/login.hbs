<!DOCTYPE html>
<html lang="en">
<head>
    {{> _head }}
    <title>Login</title>
    <script src="/js/login.js"></script>
</head>

<body>
    <header>
        {{> _header }}
    </header>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-4 mx-auto">

                    <form id="loginForm">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Nos diga o seu email">
                        </div>

                        <div class="form-group">
                            <label for="senha">Senha</label>
                            <input type="password" class="form-control" id="password" placeholder="Nos diga a sua senha">
                        </div>

                        <div class="text-right pt-4">
                            <button @click="forgotPassword()" @submit.prevent type="button" class="btn btn-warning">Esqueci minha senha</button>
                            <button @click="login()" @submit.prevent type="button" class="btn btn-success">Login</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </main>
    <footer>
        {{> _footer }}
    </footer>

    {{> _formModal }}

</body>

</html>
