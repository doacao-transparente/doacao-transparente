<!DOCTYPE html>
<html lang="en">
<head>
    {{> _head }}
    <title>Create a project</title>
    <link rel="stylesheet" href="/css/project-create.css">
    <script src="/js/project-create.js"></script>
</head>

<body>
    <header>
        {{> _header }}
    </header>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-8 mx-auto">

                    <form id="createProjectForm">
                        <div class="form-group">
                            <label for="projectName">Nome</label>
                            <input type="text" class="form-control" id="projectName" placeholder="Nos diga o nome do seu projeto">
                        </div>

                        <div class="form-group pt-2">
                            <label>Imagem</label>
                            <br />
                            <label class="custom-file container-fluid">
                                <input type="file" id="file" class="custom-file-input">
                                <span class="custom-file-control"></span>
                            </label>
                        </div>

                        <div class="form-group pt-2">
                            <label for="state">Estado</label>
                            <select @change="changeCity(this.event)" class="form-control" id="state">
                                <option v-for="state in states" :value="state.value">\{{ state.title }}</option>
                            </select>
                        </div>

                        <div class="form-group pt-2">
                            <label for="cityHall">Município</label>
                            <select class="form-control" id="cityHall">
                                <option v-for="city in cities" :value="city.value">\{{ city.title }}</option>
                            </select>
                        </div>

                        <div class="form-group pt-2">
                            <label for="projectDescription">Descrição</label>
                            <textarea class="form-control" id="projectDescription" rows="5" placeholder="Nos conte sobre seu projeto"></textarea>
                        </div>

                        <div class="form-group pt-2">
                            <label for="ammount">Valor desejado</label>
                            <div class="input-group">
                                <div class="input-group-addon">R$</div>
                                <input type="number" class="form-control text-right" id="ammount" placeholder="Nos diga quanto precisa">
                                <div class="input-group-addon">,00</div>
                            </div>
                        </div>

                        <div class="text-right pt-4">
                            <button @click="save('save')" @submit.prevent type="button" class="btn btn-primary">Salvar rascunho</button>
                            <button @click="save('send')" @submit.prevent type="button" class="btn btn-success">Enviar para aprovação</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </main>
    <footer>
        {{> _footer }}
    </footer>

    {{> _formModal }}
</body>

</html>
