<!DOCTYPE html>
<html lang="en">
<head>
    {{> _head }}

    <title>{{ project.backersTitle }}</title>

    <link rel="stylesheet" href="/css/project-view.css">
</head>

<body>
    <header>
        {{> _header }}
    </header>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-6 px-0" style="background-image: url('{{project.image}}'); background-repeat: no-repeat; background-size: cover;">
                </div>
                <div class="col-6 bg-white py-5 px-5">
                    <p class="font-h1 text-grey-23 mb-0 pb-1">
                        <strong>
                            R$ {{ project.collected }},00
                        </strong>
                    </p>
                    <p class="font-text-grey-23 pb-3">
                        {{ project.backers }} {{ project.backersTitle }}
                    </p>

                    {{! Green bar }}

                    <div class="green-bar-holder">
                        <div class="green-bar" style="width: {{project.backedPercent}}%">
                        </div>
                    </div>

                    <p class="text-grey-23 font-h4 pt-3 mb-4 pb-4">
                        <span class="float-left">{{ project.backedPercent }}%</span>
                        <span class="float-right">R$ {{ project.pledged }},00</span>
                    </p>

                    {{! X Days to go }}
                    <p class="card-text text-grey-23 font-h3 text-right mb-0">{{ project.endDate }}</p>
                    <p class="card-text text-grey-23 text-right">Days to go</p>

                    {{#if (compare userData.type 'auditor') }}
                        {{! Do nothing}}
                        {{else}}
                            {{#if (compare userData.type 'nog') }}
                                {{! Do nothing}}
                            {{else}}
                                {{#if (compare userData.type 'city-hall') }}
                                    <form id="decideProject" class="pt-4">
                                        <button type="button" class="font-h4 float-right px-0 ml-2 btn btn-success w-50">Aprovar</button>
                                        <button type="button" class="font-h4 float-right px-0 btn btn-danger w-25">Rejeitar</button>
                                    </form>
                                {{else}}
                                    <form id="bakeProject" class="pt-4">
                                        <div class="form-group my-0 w-100">
                                            <div class="input-group">
                                                <div class="font-h4 input-group-addon">R$</div>
                                                <input type="number" value="10000" class="font-h4 form-control text-right" id="ammount" placeholder="Nos ajude">
                                                <div class="font-h4 input-group-addon">,00</div>
                                            </div>
                                        </div>

                                        <button type="button" class="font-h4 px-5 btn btn-success w-100">Doar</button>
                                    </form>
                                {{/if}}
                            {{/if}}
                    {{/if}}
                </div>
            </div>
            <div class="row pt-5">
                <div class="col-12">
                    <p class="text-grey-23 font-h1 mb-1">{{ project.name }}</p>
                    <p class="text-grey-5e pb3 mb-4">~ by {{ project.owner }}</p>
                    <p class="text-grey-23 font-h4 pb-3">{{ project.description }}</p>
                </div>
            </div>
        </div>
    </main>
    <footer>
        {{> _footer }}
    </footer>
</body>

</html>
